<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:moblie113.ViewsModels"
             x:Class="moblie113.Views.BookDetail"
             Title="Book Detail">


    <ContentPage.Content>
        <StackLayout Margin="20">
            <StackLayout>
                <Label Text="Title" />
                <Entry Text="{Binding book_Name}" />
            </StackLayout>

            <StackLayout>
                <Label Text="Author" />
                <Entry Text="{Binding author}" />
            </StackLayout>
            <StackLayout>
                <Label Text="Image" />
                <Editor Text="{Binding image}" />
            </StackLayout>

            <StackLayout>
                <Label Text="Description" />
                <Editor Text="{Binding detail}" />
            </StackLayout>
            <StackLayout>
                <Label Text="Price" />
                <Editor Text="{Binding price}" />
            </StackLayout>
            <StackLayout>
                <Label Text="Download" />
                <Editor Text="{Binding download}" />
            </StackLayout>
            <StackLayout>
                <Label Text="Type" />
                <Editor Text="{Binding type}" />
            </StackLayout>

            <Button Text="Save"
            Command="{Binding SaveCommand}" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>