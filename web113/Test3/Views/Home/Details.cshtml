@model Test3.Book

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="margin:20px;">
    <div class="row justify-content-between">
        <div class="col-md-3">
            <img src="@Url.Content("~/Content/images/" + Model.image)" style="width: 276px; height: 400px; border-radius: 10px; margin-right: 20px;" />
        </div>
        <div class="col-md-9" style="height: 400px; background-color: #6ECCAF; border-radius: 10px;">
            <div class="row justify-content-between " style="padding:20px;">
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.book_Name)
                </div>
                <div class="col-md-2">
                    ราคา  @Html.DisplayFor(model => model.price) บาท
                </div>
                <div style="margin:15px;">
                    @Html.DisplayFor(model => model.author)
                </div>
                <div style="margin:15px;">
                    @Html.DisplayFor(model => model.detail)
                </div>
                <div style="position: absolute; bottom: 0; right: 0; margin: 15px;">
                    @using (Html.BeginForm("Order", "Home", new { id = Model.book_Id }, FormMethod.Post))
                    {
                        <input type="submit" value="สั่งซื้อ" class="btn btn-primary" style="background-color: #FFF2D8; color:black;" />
                        <!-- หรือ -->
                        <!-- <input type="submit" value="สั่งซื้อ" class="btn btn-danger" /> -->
                    }
                </div>

            </div>
        </div>

    </div>
</div>
